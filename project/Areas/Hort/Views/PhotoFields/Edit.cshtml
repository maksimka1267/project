@model PhotoField
@{
    string strTitle = "Редагувати запис";
    ViewBag.Title = strTitle;
}
<script src="/assets/vendor/ckeditor2/ckeditor.js"></script>
<style>
    .form-container {
        max-width: 600px; /* Set your desired max-width here */
        margin: 0 auto; /* Center the container */
    }

    .div-box {
        margin-bottom: 10px; /* Add some bottom margin to each div-box */
    }
</style>
<div class="form-container">
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Hort" asp-controller="PhotoFields" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="TitleImagePath" />
            <input type="hidden" asp-for="PhotoData" /> <!-- Добавлено для передачи массива байтов -->

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Title">Назва</label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="div-box">
                <label asp-for="PhotoData">Фотографія</label>
                <input type="file" name="photoFile" id="photoFile" accept="image/*" />
            </div>
            <input type="submit" value="Зберегти" />
        </form>
    </div>
</div>
