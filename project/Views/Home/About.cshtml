<div class="dream-university-subpage">

	<!-- Begin breadcrumbs-->
	<div class="du-page-header du-breadcrumbs">
		<div class="container">
			<div class="row">
				<div class="col-md-7 col-sm-7 col-xs-12 text-left du-title">
					<div class="du-breadcrumb-title"><h3>Про нас</h3></div>
				</div>
			</div>
		</div>
	</div>
	<!-- End breadcrumbs-->
	<!-- Begin About -->
	<div class="du-subpage-content">
		<div class="du-about">

			<!-- Begin choose us -->
			<section class="choose-us ptb-50">

				<div class="container">
					<div class="row">
						<div class="col-xs-12 col-sm-12 col-md-12 text-center">
							@foreach (var item in ViewBag.ServiceAbout)
							{
								<h2>@item.Title</h2>
								<p>@Html.Raw(item.Text)</p>
							}

						</div>
					</div>

					<section class="about-section-1">

						<div class="du-choose-us pt-20">
							<div class="row">
								<div class="col-md-6 wow fadeInLeft">
									<img class="img-responsive" src="~/img/about.jpg" alt="image">
								</div>
								<div class="col-md-6 wow fadeInRight">
									<p>
										Циклові комісії
									</p>
									<div class="row pt-20">
										@{
											int k = 1;
											@foreach (var item in ViewBag.ServiceCommission)
											{
												if (k <= 3)
												{
													<div class="col-md-6">
														<ul class="du-choose-list">
															<li><a asp-controller="Services" asp-action="Index" asp-route-id="@item.Id">@item.Title</a></li>
														</ul>
													</div>
												}
												else
												{
													<div class="col-md-6">
														<ul class="du-choose-list">
															<li><a asp-controller="Services" asp-action="Index" asp-route-id="@item.Id">@item.Title</a></li>
														</ul>
													</div>
												}
												k++;
											}
											
										}
									</div>
								</div>
							</div>
						</div>

					</section>

				</div>
			</section>
			<!-- End choose us -->
			<!-- Begin teacher -->
			<section class="du-teacher du-section-ash ptb-50 common">
				<!-- Team Block -->
				<div class="team-content">
					<!-- Container -->
					<div class="container">
						<div class="row">
							<h2 class="text-center">Адміністрація</h2>
							@foreach (var item in ViewBag.ServiceAdmin)
								{
								<div class="col-md-3 col-sm-6">
									<!-- Team Box -->
									<div class="team-box wow fadeInRight animated" style="visibility: visible; animation-name: fadeInRight; text-align:center">
										<!-- Image -->
										<img src="@Url.Action("GetImage", "Services", new { id = item.TitleImage })" alt="" class="img-responsive" style="display: block; width: 80%; margin: 0 auto;" />
										<!-- Heading -->
										<h5>@item.Title</h5>
										<h6>@item.Subtitle</h6>

									</div>
								</div>
								}
							
						</div>
					</div><!-- /Container -->
				</div><!-- / Team -->
			</section>
			<!-- End teacher -->
			<!-- Begin principal message -->
			<section class="du-principal-comment ptb-50 common">
				<div class="container">

					<div class="row">
						<h2 class="text-center">Профспілкова організація</h2>

						<div class="principal-photo col-md-2 wow fadeInLeft">
							<img class="img-responsive" src="~/img/logo.png" alt="image">
						</div>
						@foreach (var item in ViewBag.ServiceTrade)
						{
							<div class="col-md-10 wow fadeInRight">
								<p>@Html.Raw(item.Text)</p>
							</div>
						}
					</div>
				</div>
			</section>
			<!-- End principal message -->
			<!-- Begin contact us -->
			<section class="du-contact du-section-ash ptb-50 common">
				<div class="container">

					<div class="row">
						<h2 class="text-center">
							Контактна інформація
						</h2>

						<div class="col-md-6 wow fadeInLeft">
							<p>
								Адреса коледжу 69037 м. Запоріжжя, вул. Незалежної України 43
							</p>

